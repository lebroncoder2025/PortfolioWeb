{
  "name": "portfolio-klaudia-php",
  "version": "1.0.0",
  "description": "Portfolio website with React frontend and PHP API backend",
  "private": true,
  "dependencies": {
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.10.1",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:xampp": "set \"REACT_APP_API_URL=/portfolio-php/api\" && set \"REACT_APP_BASENAME=/portfolio-php\" && set \"PUBLIC_URL=/portfolio-php\" && react-scripts build",
    "build:production": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "homepage": "/PortfolioWeb"
}
